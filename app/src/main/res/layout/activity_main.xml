<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.seifmostafa.easyparking.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText_phoneNum"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/PhoneNum"
        android:textColor="#000000" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/print"
        android:id="@+id/button_print"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#0e1ecf"
        android:background="#fc6d41"
        android:textStyle="bold|italic"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/generate"
        android:id="@+id/button_generate"
        android:textColor="#fc6d41"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:layout_below="@+id/editText_phoneNum"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/imageView_generatedQr"
        android:contentDescription="@string/GeneratedQr"

        android:layout_below="@+id/button_generate"
        android:layout_above="@+id/button_print"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
